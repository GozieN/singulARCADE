<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlidingTilesSetUpActivity">

    <Spinner
        android:id="@+id/ChooseSlidingTilesSpinner"
        android:layout_width="272dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="258dp" />

    <TextView
        android:id="@+id/SetupText"
        android:layout_width="220dp"
        android:layout_height="92dp"
        android:layout_alignStart="@+id/ChooseUndoSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:text="Sliding Tiles Game Setup"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ChooseSizeView"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="82dp"
        android:gravity="center"
        android:text="Choose the Dimensions of the Sliding Tiles board: "
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ChooseUndoView"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="269dp"
        android:text="Choose the maximum number of moves you can undo."
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/ChooseUndoSpinner"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginBottom="184dp" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="510dp"
        android:layout_marginBottom="101dp"
        android:text="Play" />

</RelativeLayout>