<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SetUpActivity">

    <Spinner
        android:id="@+id/ChooseMemoryPuzzleSpinner"
        android:layout_width="272dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="292dp" />

    <TextView
        android:id="@+id/SetupText"
        android:layout_width="262dp"
        android:layout_height="141dp"
        android:layout_alignStart="@+id/ChooseUndoSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:text="Memory Puzzle Game Setup"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ChooseSizeView"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ChooseMemoryPuzzleSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="239dp"
        android:text="Choose the size of the Memory Puzzle Board:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="510dp"
        android:text="Play" />

</RelativeLayout>